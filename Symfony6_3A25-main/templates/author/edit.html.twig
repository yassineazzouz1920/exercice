{% extends 'base.html.twig' %}

{% block title %}Modifier l'auteur - {{ author.username }}{% endblock %}

{% block body %}
<div class="container">
    <h1>Modifier l'auteur : {{ author.username }}</h1>
    
    {# Affichage des messages flash #}
    {% for message in app.flashes('success') %}
        <div class="alert alert-success" role="alert">
            {{ message }}
        </div>
    {% endfor %}
    
    {% for message in app.flashes('error') %}
        <div class="alert alert-danger" role="alert">
            {{ message }}
        </div>
    {% endfor %}
    
    {# Formulaire d'édition #}
    <div class="form-container">
        {{ form_start(formulaire, {'attr': {'class': 'edit-form'}}) }}
        
        <div class="form-group">
            {{ form_label(formulaire.username, 'Nom d\'utilisateur', {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(formulaire.username, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(formulaire.username) }}
        </div>
        
        <div class="form-group">
            {{ form_label(formulaire.email, 'Email', {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(formulaire.email, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(formulaire.email) }}
        </div>
        
        <div class="form-group">
            {{ form_label(formulaire.nb_books, 'Nombre de livres', {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(formulaire.nb_books, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(formulaire.nb_books) }}
        </div>
        
        <div class="form-actions">
            {{ form_widget(formulaire.update, {'attr': {'class': 'btn btn-primary'}}) }}
            <a href="{{ path('ShowAll') }}" class="btn btn-secondary">Annuler</a>
            <a href="{{ path('showAuthorDetails', {'id': author.id}) }}" class="btn btn-info">Voir les détails</a>
        </div>
        
        {{ form_end(formulaire) }}
    </div>
    
    {# Informations sur l'auteur #}
    <div class="author-info">
        <h3>Informations actuelles</h3>
        <table class="table">
            <tr>
                <td><strong>ID :</strong></td>
                <td>{{ author.id }}</td>
            </tr>
            <tr>
                <td><strong>Nom d'utilisateur :</strong></td>
                <td>{{ author.username }}</td>
            </tr>
            <tr>
                <td><strong>Email :</strong></td>
                <td>{{ author.email }}</td>
            </tr>
            <tr>
                <td><strong>Nombre de livres :</strong></td>
                <td>{{ author.nbBooks }}</td>
            </tr>
            <tr>
                <td><strong>Livres associés :</strong></td>
                <td>{{ author.books|length }} livre(s)</td>
            </tr>
        </table>
    </div>
</div>

<style>
.container {
    max-width: 800px;
    margin: 20px auto;
    padding: 20px;
}

.form-container {
    background-color: #f8f9fa;
    padding: 20px;
    border-radius: 8px;
    margin-bottom: 20px;
}

.form-group {
    margin-bottom: 15px;
}

.form-label {
    display: block;
    margin-bottom: 5px;
    font-weight: bold;
    color: #333;
}

.form-control {
    width: 100%;
    padding: 8px 12px;
    border: 1px solid #ddd;
    border-radius: 4px;
    font-size: 14px;
}

.form-control:focus {
    outline: none;
    border-color: #007bff;
    box-shadow: 0 0 0 2px rgba(0, 123, 255, 0.25);
}

.form-actions {
    margin-top: 20px;
}

.btn {
    padding: 10px 20px;
    margin-right: 10px;
    border: none;
    border-radius: 4px;
    cursor: pointer;
    text-decoration: none;
    display: inline-block;
    font-size: 14px;
}

.btn-primary {
    background-color: #007bff;
    color: white;
}

.btn-primary:hover {
    background-color: #0056b3;
}

.btn-secondary {
    background-color: #6c757d;
    color: white;
}

.btn-secondary:hover {
    background-color: #545b62;
}

.btn-info {
    background-color: #17a2b8;
    color: white;
}

.btn-info:hover {
    background-color: #138496;
}

.alert {
    padding: 12px 16px;
    margin-bottom: 20px;
    border-radius: 4px;
}

.alert-success {
    background-color: #d4edda;
    color: #155724;
    border: 1px solid #c3e6cb;
}

.alert-danger {
    background-color: #f8d7da;
    color: #721c24;
    border: 1px solid #f5c6cb;
}

.author-info {
    background-color: #e9ecef;
    padding: 20px;
    border-radius: 8px;
}

.table {
    width: 100%;
    border-collapse: collapse;
}

.table td {
    padding: 8px 12px;
    border-bottom: 1px solid #dee2e6;
}

h1 {
    color: #333;
    margin-bottom: 20px;
}

h3 {
    color: #495057;
    margin-bottom: 15px;
}
</style>
{% endblock %}
